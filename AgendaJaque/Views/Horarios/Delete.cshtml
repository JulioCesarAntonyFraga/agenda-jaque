@model AgendaJaque.Models.Horario

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Horário de @Model.Paciente.Nome</h1>

<h3>Tem certeza que deseja deletar esse horário?</h3>
<div>
    <h4>Horário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Celular)
        </dd class>
    </dl>
    
